<%- include("partials/adminHeader") -%>
<%if(message.length> 0){ %>
<div class="alert alert-primary center" style="width: 350px; margin-bottom: 10px;" role="alert">
  <%= message %>
</div>
<% } %>


<form action="/complaint/search" method="get">
  <div class="row" style="padding: 0px 10px 0 50px;">
    <div class="col-lg-10">
      <input type="text" class="form-control" name="search" placeholder="Search by issue/description/department(Example: CSE)" />
    </div>
    <div class="col-lg-2">
      <button type="Submit" value="search" class="btn-upvote">
        Search
      </button>
    </div>
  </div>
</form>

<section id = "comps" >
  <div class="row" style="padding: 10px 50px;">
    
    <% for(i=0;i < allComplaints.length;i++){ %>

    <div class="col-lg-12">
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Issue</p>
            </div>
            <div class="col-sm-7">
              <p class="text-muted mb-0"><b>
                  <%= allComplaints[i].issue %>
                </b></p>
            </div>
            <div class="col-sm-2">
              <button class="btn-upvote toggle" onclick=toggle(this.name)><a href='#'>View Details</a></button>
            </div>

          </div>
        <div class = "target" style="display: none;">
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Description</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">
                <%= allComplaints[i].description %>
              </p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Status</p>
            </div>
            <div class="col-sm-3">
              <p class="text-muted mb-0">
                <%= allComplaints[i].status %>
              </p>
            </div>
            <div class="col-sm-3">
              <p class="mb-0">Department</p>
            </div>
            <div class="col-sm-3">
              <p class="text-muted mb-0">
                <%= allComplaints[i].dept_id %>
              </p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Domain</p>
            </div>
            <div class="col-sm-3">
              <p class="text-muted mb-0">
                <%= allComplaints[i].domId %>
              </p>
            </div>
            <div class="col-sm-3">
              <p class="mb-0">Upvotes</p>
            </div>
            <div class="col-sm-3">
              <p class="text-muted mb-0">
                <%= allComplaints[i].upvotes %>
              </p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Remarks</p>
            </div>
            <div class="col-sm-3">
              <p class="text-muted mb-0">
                <%= allComplaints[i].remarks %>
              </p>
            </div>
          </div>
        </div>
        </div>
      </div>

    </div>



    <% } %>
  </div>

</section>


<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
<script src="faculty.js"></script>
<script>
  ViewHide();
</script>
</body>

</html>
<%if(role === "student"){%>
  <%- include("partials/header") -%>
<%}else if(role === "faculty"){%>
  <%- include("partials/facHeader") -%>
<%}else if(role === "admin"){%>
  <%- include("partials/adminHeader") -%>
<%}%>




<section style="padding-top: 10px">
  <div class="container py-5">
    <div class="row">
      <%faculties.forEach(function(faculty){%>

      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-8">
                <p class="text-muted mb-0"><%= faculty.name %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0">Designation</p>
              </div>
              <div class="col-sm-8">
                <p class="text-muted mb-0"><%= faculty.designation %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0">Branch</p>
              </div>
              <div class="col-sm-8">
                <p class="text-muted mb-0"><%= faculty.dept_id %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-8">
                <p class="text-muted mb-0"><%= faculty.username %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0">Scores</p>
              </div>
              <div class="col-sm-8">
                <p class="text-muted mb-0"><%= faculty.scores %></p>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-4">
                <p class="mb-0">Mobile</p>
              </div>
              <div class="col-sm-8">
                <p class="text-muted mb-0"><%= faculty.phone %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include("partials/footer") -%>

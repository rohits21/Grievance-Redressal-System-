<%- include("partials/header") -%> 


<%if(message.length > 0){ %>
  <div class="alert alert-primary center" style="width: 350px; margin-bottom: 10px;" role="alert">
    <%= message %>
  </div>
<% } %>


    <form action="/complaint/search" method="get">
      <div class="row" style="padding: 0px 10px 0 50px;">
        <div class="col-lg-10">
          <input type="text" class="form-control" name="search" placeholder="Search by issue/description/department(Example: CSE)" />
        </div>
        <div class="col-lg-2">
          <button type="Submit" value="search" class="btn-upvote">
          Search
          </button>
        </div>
      </div>
    </form>
    <section >
      <div class="row" style="padding: 10px 50px;">

<% allComplaints.forEach(function(complaint){ %>


      
            <div class="col-lg-12">
              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Issue</p>
                    </div>
                    <div class="col-sm-7">
                      <p class="text-muted mb-0"><b> <%= complaint.issue %> </b></p>
                    </div>
                    <div class="col-sm-2">
                        <!-- <p class="mb-0">Issue</p> -->
                        <button class="btn-upvote"> <a href="/student/upvotes/<%= complaint.complaint_id %>">Upvote</a></button>
                      </div>
                     
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Description</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"> <%= complaint.description %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Status</p>
                    </div>
                    <div class="col-sm-3">
                      <p class="text-muted mb-0"><%= complaint.status %></p>
                    </div>
                    <div class="col-sm-3">
                        <p class="mb-0">Department</p>
                      </div>
                      <div class="col-sm-3">
                        <p class="text-muted mb-0"> <%= complaint.dept_id %></p>
                      </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Domain</p>
                    </div>
                    <div class="col-sm-3">
                      <p class="text-muted mb-0"> <%= complaint.domId %></p>
                    </div>
                    <div class="col-sm-3">
                        <p class="mb-0">Upvotes</p>
                      </div>
                      <div class="col-sm-3">
                        <p class="text-muted mb-0"><%= complaint.upvotes %></p>
                      </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Remarks</p>
                    </div>
                    <div class="col-sm-3">
                      <p class="text-muted mb-0"> <%= complaint.remarks %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          

     
  <%  }) %>
</div>
       
</section>

<%- include("partials/footer") -%> 
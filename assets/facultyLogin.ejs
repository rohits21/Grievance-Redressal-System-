<%- include("partials/facHeader") -%>

<section class="forms-section">
  <%if(message.length> 0){ %>
  <div
    class="alert alert-primary center"
    style="width: 350px; margin-bottom: 10px"
    role="alert"
  >
    <%= message %>
  </div>
  <% } %>
  <div class="forms">
    <div class="form-wrapper is-active">
      <button type="button" class="switcher switcher-login">
        Login
        <span class="underline"></span>
      </button>
      <form
        action="/faculty"
        method="post"
        class="form form-login"
        style="background-color: black"
      >
        <fieldset>
          <legend>Please, enter your email and password for login.</legend>
          <div class="input-block">
            <label for="login-email">Username(E-mail)</label>
            <input
              name="loginEmail"
              pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
              id="login-email"
              type="email"
              required
            />
          </div>
          <div class="input-block">
            <label for="login-password">Password</label>
            <input
              name="loginPassword"
              id="login-password"
              type="password"
              required
            />
          </div>
        </fieldset>
        <button type="submit" class="btn-login">Login</button>
      </form>
    </div>
    <div class="form-wrapper">
      <button type="button" class="switcher switcher-signup">
        Sign Up
        <span class="underline"></span>
      </button>
      <form
        action="/faculty/signup"
        method="post"
        class="form form-signup"
        style="background-color: black"
      >
        <fieldset>
          <legend>
            Please, enter your email, password and password confirmation for
            sign up.
          </legend>
          <div class="input-block">
            <input
              type="text"
              class="form-control"
              name="nameOfFaculty"
              placeholder="Name"
              autocomplete="off"
              required
              pattern="^[a-zA-Z\s]+$"
            />
          </div>
          <div class="input-block">
            <input
              type="text"
              class="form-control"
              name="employeeIdofFaculty"
              placeholder="Numeric Employee Id."
              required
              autocomplete="off"
              pattern="^[1-9]+$"
            />
          </div>

          <input
            type="radio"
            id="bTech"
            name="courseOfFaculty"
            value="B.Tech"
          />
          <label value="B.Tech">B.Tech</label>

          <input
            type="radio"
            id="mba"
            name="courseOfFaculty"
            value="MBA"
            disabled
          />
          <label value="MBA">MBA</label>

          <input
            type="radio"
            id="b.pharma"
            name="courseOfFaculty"
            value="B.Pharma"
            disabled
          />
          <label value="B.Pharma">B.Pharma</label>

          <div class="input-block">
            <label>Branch</label>
            <select
              id="br"
              list="branch"
              class="form-control"
              name="branchOfFaculty"
              placeholder="Branch"
            >
              <option value="">--select--</option>
              <option value="CSE">CSE</option>
              <option value="ME">ME</option>
              <option value="EX">EX</option>
              <option value="EC">EC</option>
              <option value="CE">CE</option>
            </select>
          </div>

          <div class="input-block">
            <label>Designation</label>
            <select
              id="designation"
              list="designation"
              class="form-control"
              name="designationOfEmployee"
              placeholder="Branch"
            >
              <option value="">--select--</option>
              <option value="Deputy HOD">Deputy HOD</option>
              <option value="Professor">Professor</option>
              <option value="Associate Professor">Associate Professor</option>
              <option value="Assistant Professor">Assistant Professor</option>
            </select>
          </div>
          <div class="input-block">
            <input
              type="email"
              class="form-control"
              pattern="^[a-zA-Z0-9_.+-]+@(gmail|yahoo)\.com$|^[a-zA-Z0-9_.+-]+@sistec\.ac\.in$"
              name="email"
              placeholder="Username(E-mail)"
              required
              autocomplete="off"
            />
          </div>

          <ul>
            <li>Must contain at least one number</li>
            <li>One uppercase letter</li>
            <li>One lowercase letter</li>
            <li>At least 8 or more characters</li>
          </ul>
          <div class="intput-block">
            <input
              type="password"
              id="faculty_password"
              pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
              onkeyup="check();"
              title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
              class="form-control"
              name="password"
              placeholder="Password"
              required
            />
          </div>
          <div class="input-block">
            <input
              type="password"
              class="form-control"
              placeholder="Confirm Password"
              onkeyup="check();"
              id="faculty_confirm_password"
              required
            />
          </div>

          <span id="message"></span>
        </fieldset>
        <button type="submit" class="btn-login">Submit</button>
      </form>
    </div>
  </div>
</section>

<script
  src="https://code.jquery.com/jquery-3.6.3.js"
  integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
  crossorigin="anonymous"
></script>
<script src="/faculty.js"></script>
